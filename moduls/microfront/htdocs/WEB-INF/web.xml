<?xml version="1.0"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <listener>
		<listener-class>es.caib.utilities.sesion.NsesionesMicrofront</listener-class>
    </listener>
    
   <listener>
		<listener-class>org.ibit.rol.sac.microfront.estadistica.util.BufferStatInitializer</listener-class>
    </listener>   

  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>
  
  	<servlet>
    	<servlet-name>MenuCabeceraSchedulerServlet</servlet-name>
    	<display-name>Quartz menu cabecera Servlet</display-name>
    	<servlet-class>org.ibit.rol.sac.microfront.job.MenuCabeceraSchedulerServlet</servlet-class>
       	<load-on-startup>1</load-on-startup>
	</servlet>
  
  <servlet>
    
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    
    <init-param>
      <param-name>detail</param-name>
      <param-value>2</param-value>
    </init-param>
    
    <load-on-startup>2</load-on-startup>
  
	<security-role-ref>
       <role-name>sacsystem</role-name>
       <role-link>RSC_SYSTEM</role-link>
    </security-role-ref>
    
    <security-role-ref>
       <role-name>sacadmin</role-name>
       <role-link>RSC_ADMIN</role-link>
    </security-role-ref>
    
    <security-role-ref>
       <role-name>sacsuper</role-name>
       <role-link>RSC_SUPER</role-link>
    </security-role-ref>
    
    <security-role-ref>
       <role-name>sacoper</role-name>
       <role-link>RSC_OPER</role-link>
    </security-role-ref>  
  
  </servlet>

  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

  <taglib>
    <taglib-uri>/tags/struts-bean</taglib-uri>
    <taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts-html</taglib-uri>
    <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts-logic</taglib-uri>
    <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts-nested</taglib-uri>
    <taglib-location>/WEB-INF/struts-nested.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts-tiles</taglib-uri>
    <taglib-location>/WEB-INF/struts-tiles.tld</taglib-location>
  </taglib>

  <security-constraint>
    <web-resource-collection>
        <web-resource-name>sacmicrofrontintranet</web-resource-name>
        <url-pattern>/intranethome.do</url-pattern>
        <url-pattern>/intranetlogin.do</url-pattern>
    </web-resource-collection>
    <auth-constraint>
       <!--   
       	<role-name>RSC_SYSTEM</role-name>
        <role-name>RSC_ADMIN</role-name>
        <role-name>RSC_SUPER</role-name>
        <role-name>RSC_OPER</role-name> -->
        <role-name>tothom</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name><![CDATA[ROL - SAC]]></realm-name>
  </login-config>

  <security-role>
    <role-name>RSC_SYSTEM</role-name>
  </security-role>
  <security-role>
    <role-name>RSC_ADMIN</role-name>
  </security-role>
  <security-role>
    <role-name>RSC_SUPER</role-name>
  </security-role>
  <security-role>
    <role-name>RSC_OPER</role-name>
  </security-role>
  <security-role>
    <role-name>tothom</role-name>
  </security-role>
  <env-entry>
    <description>Host de envio de correo</description>
    <env-entry-name>mail_host</env-entry-name>
    <env-entry-value>smtp.indra.es</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <description>Puerto del host de envio de correo</description>
    <env-entry-name>mail_port</env-entry-name>
    <env-entry-value>25</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <description>Password del usuario de correo</description>
    <env-entry-name>mail_pwd</env-entry-name>
    <env-entry-value>xxxx</env-entry-value>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>



</web-app>
